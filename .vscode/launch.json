{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "pwa-node",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "/usr/local/share/npm-global/bin/ng",
            "args": [
                "serve"
            ],
            "cwd": "${workspaceFolder}/client",
        },
        {
            "name": "Launch Client",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "index.js",
            "cwd": "${workspaceFolder}/server",
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": [
                "Launch Server",
                "Launch Client"
            ]
        }
    ]
}